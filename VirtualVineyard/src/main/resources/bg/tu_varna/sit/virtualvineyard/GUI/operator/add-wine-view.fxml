<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="400.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tu_varna.sit.virtualvineyard.GUI.operator.AddWineController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="374.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
        </padding>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" style="-fx-border-color: #9B5CDA;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Choose grape variety:" />
            <ComboBox fx:id="grapeComboBox" prefWidth="150.0" />
            <Label text="Choose percentage:" />
            <Spinner fx:id="percentageSpinner" />
            <Button mnemonicParsing="false" onAction="#onAddGrapeClick" style="-fx-background-color: #9B5CDA;" text="Add grapes" textFill="WHITE" />
        </VBox>
        <TextField fx:id="nameTextField" promptText="Wine name" />
      <Button mnemonicParsing="false" onAction="#onAddWineClick" style="-fx-background-color: #7A2B2B;" text="Add wine" textFill="WHITE" />
    </VBox>
   <TableView fx:id="recipeTable" prefHeight="400.0" prefWidth="390.0">
     <columns>
       <TableColumn fx:id="grapeCol" prefWidth="150.0" text="Grape Name" />
       <TableColumn fx:id="percentageCol" prefWidth="75.0" text="Percentage" />
     </columns>
      <HBox.margin>
         <Insets bottom="20.0" right="20.0" top="20.0" />
      </HBox.margin>
   </TableView>
</HBox>
