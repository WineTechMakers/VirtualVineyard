<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="460.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tu_varna.sit.virtualvineyard.GUI.operator.OperatorController">
<top>
    <HBox spacing="10" style="-fx-background-color: #5F25A1; -fx-padding: 15;">
        <Label fx:id="operatorLabel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Hello Operator!">
            <font>
                <Font name="High Tower Text" size="12.0" />
            </font></Label>
        <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#onLogoutClick" style="-fx-font-size: 14px; -fx-background-color: #a40a0a;" text="Logout" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font></Button>
    </HBox>
</top>
<left>
    <VBox spacing="15" style="-fx-background-color: #B07FD1; -fx-padding: 20;">
        <Button maxWidth="Infinity" onAction="#onAddWineClick" style="-fx-background-color: #5F25A1;" text="Add Wine Recipe" textFill="WHITE" />
        <Button maxWidth="Infinity" onAction="#onListWinesClick" style="-fx-background-color: #5F25A1;" text="List Wine Recipes" textFill="WHITE" />
        <Separator />
         <Button layoutX="30.0" layoutY="71.0" maxWidth="Infinity" onAction="#onBottleWinesClick" style="-fx-background-color: #663366;" text="Bottle Wines" textFill="WHITE" />
         <Button mnemonicParsing="false" onAction="#onListBottledWinesClick" style="-fx-background-color: #663366;" text="List Bottled Wines" textFill="WHITE" />
    </VBox>
</left>
<center>
    <StackPane fx:id="contentPane" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #D4BEEE;" BorderPane.alignment="CENTER" />
</center>
</BorderPane>
