<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="460.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tu_varna.sit.virtualvineyard.GUI.host.HostController">
   <top>
      <HBox spacing="10" style="-fx-background-color: #84973B; -fx-padding: 15;">
         <Label fx:id="hostLabel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Hello Host!">
            <font>
               <Font name="High Tower Text" size="12.0" />
            </font></Label>
         <Pane HBox.hgrow="ALWAYS" />
         <Button onAction="#onLogoutClick" style="-fx-font-size: 14px; -fx-background-color: #a40a0a;" text="Logout" textFill="WHITE">
            <font>
               <Font name="System Bold Italic" size="12.0" />
            </font></Button>
      </HBox>
   </top>
   <left>
      <VBox spacing="15" style="-fx-background-color: #B7D018; -fx-padding: 20;">
         <Button maxWidth="Infinity" onAction="#onAddWarehouseClick" style="-fx-background-color: #84973B;" text="Add Warehouse" textFill="WHITE" />
         <Button maxWidth="Infinity" onAction="#onAddGrapeClick" style="-fx-background-color: #84973B;" text="Add Grape" textFill="WHITE" />
         <Button maxWidth="Infinity" onAction="#onAddBottleClick" style="-fx-background-color: #84973B;" text="Add Bottle" textFill="WHITE" />
         <Separator />
         <Button maxWidth="Infinity" onAction="#onCheckInventoryClick" style="-fx-background-color: #6A8737;" text="Check Inventory" textFill="WHITE" />
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentPane" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #E7EEBA;" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
